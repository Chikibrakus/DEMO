<Window x:Class="DEMO.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMO"
        mc:Ignorable="d"
        Title="Registration" Height="360" Width="280">
    <Grid>
        <Label Content="Регистрация" HorizontalAlignment="Left" Margin="75,55,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="46,122,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="46,192,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="TxtLogin" HorizontalAlignment="Left" Margin="45,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>
        <PasswordBox x:Name="TxtPass" HorizontalAlignment="Center"  Width="190" Margin="0,221,0,0" Height="22" VerticalAlignment="Top"/>
        <Button x:Name="BtnEnter" Content="Добавить" HorizontalAlignment="Center" Margin="0,281,0,0" Width="188" Click="BtnEnter_Click" Height="53" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboPost" HorizontalAlignment="Center" Margin="0,248,0,0" VerticalAlignment="Top" Width="188" Height="28"/>
    </Grid>
</Window>
